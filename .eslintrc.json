{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "radix": "off",
		"func-names": "off",
		"no-continue": "off",
		"no-plusplus": "off",
        "padded-blocks": "off",
        "object-curly-newline": "off",
        "no-use-before-define": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2
            }
        ]
    }
}