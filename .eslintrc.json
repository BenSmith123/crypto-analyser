{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"mocha": true
	},
	"extends": [
		"airbnb-base",
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"ignorePatterns": "dist",
	"rules": {
		"radix": "off",
		"func-names": "off",
		"no-continue": "off",
		"no-plusplus": "off",
		"padded-blocks": "off",
		"object-curly-newline": "off",
		"no-use-before-define": "off",
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 2
			}
		],
		"@typescript-eslint/no-var-requires": "off"
	}
}