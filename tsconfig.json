{
	"include": [
		"src/**/*"
	],
	"compilerOptions": {
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
    	"sourceMap": true,
		"lib": [
			"es2020",
		],
	}
}